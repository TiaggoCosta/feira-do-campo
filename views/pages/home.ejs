<%- contentFor('body') %>

<header class="header">
    <div class="text-box">
        <h1 class="heading-primary">
            <span class="heading-primary-main">Feira do Campo</span>
            <span class="heading-primary-sub">Conectando o campo Ã  cidade</span>
        </h1>
    </div>
</header>

<div class="container">
    <div class="page-header mb-5 mt-5 justify-content-center">
        <h2 class="title text-center">Nossos Produtos</h2>
    </div>
</div>

<div class="container"></div>
<div class="container-fluid mt-2 show-product">
<div class="row justify-content-center">
<% for (product of products) { %>
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card mb-3 card-home">
              <img class="card-img-top img-card-home" src="<%= product.image %>" alt="<%= product.title %>">
              <div class="card-body">
                <p class="float-right">
                    <h5 class="card-title"><%= product.title %></h5>
                    <p class="card-text text-justify product-description-home"><%= product.description %></p>
                    <p class="card-text text-right"> R$ <%= product.price%></p>
                </p>
              </div>
              <a href="/admin/products/<%= product.id %>">
                <button type="button" class="btn btn-success button-visualizar-home"data-toggle="tooltip" data-placement="top" title="Clique para mais detalhes">Visualizar</button>
              </a>
              <footer class="card-footer">
                <form action="/cart/products" method="POST">
                  <input hidden value="<%= product.id %>" name="productId" />
                  <button class="button has-icon is-inverted">
                    <i class="fa fa-shopping-cart"></i> Add to cart
                  </button>
                </form>
              </footer>
            </div>
            
        </div>

<% } %>
</div>
</div>
</div>
