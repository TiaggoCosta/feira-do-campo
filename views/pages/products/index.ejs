<%- contentFor('body') %>
<div class="container"></div>
  <div class="page-header mb-5 mt-5">
      <h2 class="title">Gerenciamento de Produtos</h2>
  </div>

  <div class="d-flex mb-1" >
    <h4>Produtos Cadastrados</h4>
    <a href="/products/new" class="ml-auto btn btn-success">
      <i class="fas fa-plus"></i> Adicionar
    </a>
  </div>
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Preço</th>
        <th>Disponibilidade</th>
        <th>Editar</th>
        <th>Deletar</th>
      </tr>
    </thead>
    <tbody>
      <% for (product of products){%>
        <tr>
          <td><%= product.title %></td>
          <td><%= product.price %></td>
          <td>
            <% if (product.isAvailable) {%>
            <p class="badge badge-success card-text text-right product-isAvailable-index">Produto disponível</p>
           <% } else {%>
            <p class="badge badge-danger card-text text-right product-isAvailable-index">Produto indisponível</p>
           <% }%>
          </td>
          <td>
            <a href="/products/<%=product.id%>/edit">
              <button class="btn btn-primary">
                <i class="far fa-edit"></i> Editar
              </button>
            </a>
          </td>
          <td>
            <form action="/products/<%=product.id%>?_method=DELETE" method="POST">
              <button class="btn btn-danger">
                <i class="far fa-trash-alt"></i> Deletar
              </button>
            </form>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>